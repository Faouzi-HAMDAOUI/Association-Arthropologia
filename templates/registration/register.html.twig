<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}cr√©ation d'un utilisateur
			{% endblock %}
		</title>
		{% block stylesheets %}
			{% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}

			<link rel="preconnect" href="https://fonts.gstatic.com">
			<link href="https://fonts.googleapis.com/css2?family=Fira+Sans+Condensed:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">
			<link rel="stylesheet" href="/css/myStyle.css">

			<link rel="stylesheet" href="/css/myStyle.css">

			<link rel="stylesheet" href="https://bootswatch.com/4/cosmo/bootstrap.min.css">
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
		{% endblock %}

		{# // <script src="{{ asset('js/vue.min.js') }}"></script> #}

	</head>
	<body class="backgroungCreate">

		{% include "shared/_navbar.html.twig" %}
		<br><br>
		<div class="container mt-5" style="background: white">


			<div class="row justify-content-md-center ">
				<div class="col-md-8">
                <h1 class="mt-4 mb-2 ml-4">Inscription</h1>
					{{ form_start(registrationForm) }}
					{{ form_errors(registrationForm) }}
					<div class="col-md-auto">
						<div class="mb-3" style="width: 30rem">

							<div class="form-group ml-3 mr-3 mt-4">
								{{ form_row(registrationForm.email) }}
							</div>

							<div class="form-group ml-3 mr-3">
								{{ form_row(registrationForm.plainPassword) }}
							</div>

							<div class="form-group ml-3 mr-3">
								{{ form_row(registrationForm.agreeTerms) }}
							</div>

							<div></div>
						</div>

						<div class="row justify-content-md-center mt-5 ">

							<div class="col col-md-6 col-sm-4 mb-5">
								<a class="btn btnRetour  text-capitalize" href="{{ path('security_login') }}">
										<i class="fas fa-angle-left"></i>
										Retour
								</a>
							</div>
							<div class="col col-md-6 col-sm-4 mb-5">
								<button type="submit" class="btn btnSuivant  ml-3 text-capitalize">
										S'inscrire
								</button>
							</div>
						</div>

						{{ form_end(registrationForm) }}
					</div>
				</div>


			</div>
		</body>
	</body>
</html>
